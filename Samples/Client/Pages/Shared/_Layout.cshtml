@{ ViewBag.Title = "Client"; }
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>@ViewBag.Name | @ViewBag.Title</title>
		<link asp-append-version="true" href="~/Style/bootstrap.min.css" rel="stylesheet" />
		<link asp-append-version="true" href="~/Style/site.css" rel="stylesheet" />
	</head>
	<body>
		<header class="fixed-top">
			<nav class="container-fluid navbar navbar-expand-md navbar-dark bg-dark pe-4 ps-4">
				<a class="navbar-brand" href="/">@ViewBag.Title</a>
				<button aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-bs-target="#navbar" data-bs-toggle="collapse" type="button">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbar">
					<ul class="navbar-nav me-auto mb-2 mb-md-0">
						<li class="nav-item">
							<a asp-page="/Index" class="nav-link@(Html.Raw(Context.Request.Path == "/" || Context.Request.Path.StartsWithSegments("/Index") ? " active" : null))">Home</a>
						</li>
						<li class="nav-item">
							<a asp-page="/Operation/Index" class="nav-link@(Html.Raw(Context.Request.Path.StartsWithSegments("/Operation") ? " active" : null))">Operation</a>
						</li>
						<li class="nav-item">
							<a asp-page="/Process/Index" class="nav-link@(Html.Raw(Context.Request.Path.StartsWithSegments("/Process") ? " active" : null))">Process</a>
						</li>
						<li class="nav-item">
							<a asp-page="/ProcessWithResult/Index" class="nav-link@(Html.Raw(Context.Request.Path.StartsWithSegments("/ProcessWithResult") ? " active" : null))">Process with result</a>
						</li>
					</ul>
				</div>
			</nav>
		</header>
		<main class="container" role="main">
			<h1>@ViewBag.Name</h1>
			@RenderBody()
		</main>
		<script asp-append-version="true" src="~/Scripts/bootstrap.bundle.min.js"></script>
	</body>
</html>